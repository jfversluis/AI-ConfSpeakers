<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ConfSpeakersMaui.ViewModels"
             xmlns:models="clr-namespace:ConfSpeakersMaui.Models"
             x:Class="ConfSpeakersMaui.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title=".NET Day Switzerland">

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#8B2B47" Offset="0.0" />
                <GradientStop Color="#B8336A" Offset="0.3" />
                <GradientStop Color="#C73E6C" Offset="0.7" />
                <GradientStop Color="#D4477F" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Content -->
        <Grid RowDefinitions="Auto,*">
            
            <!-- Header -->
            <Grid Grid.Row="0" Padding="20,40,20,20">
                <StackLayout Spacing="8">
                    <Label 
                        Text=".NET Day Switzerland"
                        FontSize="32"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalOptions="Center" />
                    <Label 
                        Text="Meet Our Amazing Speakers"
                        FontSize="18"
                        TextColor="#F0F0F0"
                        HorizontalOptions="Center" />
                </StackLayout>
            </Grid>

            <!-- Content Area -->
            <Grid Grid.Row="1">
                <!-- Loading Indicator -->
                <ActivityIndicator 
                    IsVisible="{Binding IsLoading}"
                    IsRunning="{Binding IsLoading}"
                    Color="White"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />

                <!-- Error Message -->
                <StackLayout 
                    IsVisible="{Binding HasError}"
                    Padding="20"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                    <Label 
                        Text="{Binding ErrorMessage}"
                        TextColor="White"
                        FontSize="16"
                        HorizontalTextAlignment="Center" />
                    <Button 
                        Text="Retry"
                        Command="{Binding LoadSpeakersCommand}"
                        BackgroundColor="White"
                        TextColor="#8B2B47"
                        Margin="0,10,0,0"
                        CornerRadius="25"
                        Padding="30,10" />
                </StackLayout>

                <!-- Speakers List -->
                <CollectionView 
                    ItemsSource="{Binding Speakers}"
                    IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                    BackgroundColor="Transparent"
                    Margin="15,0">
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Speaker">
                            <Grid Padding="5">
                                <!-- Speaker Card -->
                                <Border 
                                    BackgroundColor="White"
                                    Stroke="Transparent"
                                    StrokeThickness="0"
                                    Shadow="{OnPlatform 
                                        Default={StaticResource CardShadow},
                                        WinUI={x:Null}}"
                                    Padding="20"
                                    Margin="0,5">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="15" />
                                    </Border.StrokeShape>

                                    <Grid ColumnDefinitions="80,*" ColumnSpacing="15">
                                        
                                        <!-- Profile Picture -->
                                        <Border Grid.Column="0" 
                                                VerticalOptions="Start"
                                                WidthRequest="80"
                                                HeightRequest="80"
                                                BackgroundColor="#F5F5F5"
                                                Stroke="#E0E0E0"
                                                StrokeThickness="1">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="40" />
                                            </Border.StrokeShape>
                                            <Image 
                                                Source="{Binding ImageUrl}"
                                                Aspect="AspectFill"
                                                WidthRequest="80"
                                                HeightRequest="80" />
                                        </Border>

                                        <!-- Speaker Info -->
                                        <StackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                                            <!-- Name -->
                                            <Label 
                                                Text="{Binding Name}"
                                                FontSize="20"
                                                FontAttributes="Bold"
                                                TextColor="#2C2C2C"
                                                LineBreakMode="TailTruncation" />
                                            
                                            <!-- Company/Tagline -->
                                            <Label 
                                                Text="{Binding Company}"
                                                FontSize="14"
                                                TextColor="#666666"
                                                LineBreakMode="WordWrap"
                                                MaxLines="2" />
                                        </StackLayout>
                                    </Grid>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Grid>
    </Grid>

</ContentPage>

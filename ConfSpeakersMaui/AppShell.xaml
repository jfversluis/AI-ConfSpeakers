<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConfSpeakersMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConfSpeakersMaui"
    xmlns:pages="clr-namespace:ConfSpeakersMaui.Pages"
    Title="ConfSpeakersMaui">

    <TabBar>
        <ShellContent
            Title="Speakers"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        
        <ShellContent
            Title="Sessions"
            ContentTemplate="{DataTemplate pages:SessionsPage}"
            Route="SessionsPage" />
    </TabBar>

</Shell>
